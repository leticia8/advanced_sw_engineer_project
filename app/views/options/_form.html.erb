<%= form_with(model: [ @proposal, @proposal.options.build ], local: true) do |form| %>
  <div class="form-group">
      <%= form.label :Descripción %><br>
      <%= form.text_field :description, class: 'form-control', placeholder: 'Escribir descripción' %>
  </div>
   
  <div class="form-group">
    <%= form.submit 'Crear Opción', class: 'w-100 btn btn-success'%>
    <a class="btn btn-secondary btn-md btn-block" style="margin-top:5px" href="<%= election_path(@proposal.election_id) %>">Volver</a> 
  </div>
<% end %>