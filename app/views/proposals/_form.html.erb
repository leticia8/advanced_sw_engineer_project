<%= form_with(model: [ @election, @election.proposals.build ], local: true) do |form| %>
  <div class="form-group">
      <%= form.label :Nombre %><br>
      <%= form.text_field :name, class: 'form-control', placeholder: 'Escribir nombre' %>
  </div>
  <div class="form-group">
      <%= form.label :Descripción %><br>
      <%= form.text_area :description, class: 'form-control', placeholder: 'Escribir descripción' %>
  </div>
  <div class="form-group">     
    <%= form.submit 'Crear Propuesta', class: 'w-100 btn btn-success'  %> 
    <a class="btn btn-secondary btn-md btn-block" style="margin-top:5px" href="/elections">Volver</a> 
  </div>
<% end %>

