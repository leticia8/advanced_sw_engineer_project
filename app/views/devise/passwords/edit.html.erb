<div class="container col-6">
  <h1 class="d-flex justify-content-between align-items-center mb-3">
    <h3><span class="shadow-lg badge badge-success d-flex justify-content-center">Cambio de Contraseña</span></h3>
  </h1>
</div>

<div class="container col-6 py-4" id="identification-views">
  <ul class="shadow-lg list-group mb-3">
    <li class="list-group-item justify-content-center lh-condensed">

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="form-group mt-3">
        <%= f.label :password, "Nueva contraseña " %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> caracteres mínimo)</em><br />
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control list-inline-item text-success' %>
      </div>

      <div class="form-group mt-3">
        <%= f.label :password_confirmation, "Confirme su contraseña" %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control list-inline-item text-success' %>
      </div>

      <div class="d-flex justify-content-center align-items-center">
        <%= f.submit "Cambiar Contraseña", class: 'w-100 btn btn-secondary' %>
      </div>
    <% end %>

    </li>
    </ul>
    <span><%= render "devise/shared/links" %></span>
</div>
