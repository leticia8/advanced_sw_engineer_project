<div class="container">
  <div class="py-2">
    
    <div id="top" class="col-md-12">
      <div class="row">
        <div class="col-md-12 mb-3">
          <h4 class="d-flex justify-content-between align-items-center mb-3">
            <h3><span class="shadow-lg badge badge-success">Información de la Elección</span></h3>
          </h4>
          <ul class="shadow-lg list-group mb-3">
            <li class="list-group-item justify-content-between lh-condensed">
              <div>
                <h7>
                  <span class="text-dark font-weight-bold">Descripción: </span>
                  <span class="text-dark"><%= @election.description %></span>
                </h7>
              </div>
            </li>
          </ul>
          <hr class="mb-4">
        </div>
      </div>
    </div>
    
    <div id="bottom" class="col-md-12 order-md-2 visible">
      <div class="row">
        <div class="col-md-12 mb-3">
          <form class="needs-validation" novalidate>   
            <% if @election.proposals.length != 0 %>
              <h4><span class="shadow-lg badge badge-success">Datos de cada Propuesta</span></h4>
              
                <% @election.proposals.each do |proposal| %>

                  <li class="mt-2 list-group-item list-group-item-white justify-content-center lh-condensed">
                    <div class="text-success">
                      <h6>
                        <span class="text-secondary">Nombre de la propuesta: </span>
                        <span class="text-success font-weight-bold"><%= proposal.name %></span>
                      </h6>
                      <h7>
                        <span class="text-secondary font-weight-bold">Descripción: </span>
                        <span class="text-success"><%= proposal.description %></span>
                      </h7>

                      <% if proposal.options.length !=0 %>
                        <table class="table table-bordered table-sm mt-3 shadow-lg">
                            <thead class="thead-dark">
                              <th style="text-align:center" scope="col">Opciones</th>
                            </thead>
                            <% proposal.options.each do |option| %>
                                <tbody>  
                                  <td class="table-secondary" style="text-align:center"><%= option.description %></td>
                                </tbody>
                            <% end %>
                        </table>
                      <% end %>
                    </div>
                  </li>
                <% end %>
              </ul>
              <hr class="mb-4">
            <% else %>
              <h5><span class="d-flex justify-content-center align-self-center text-secondary">La elección no tiene propuestas</span></h5>
            <% end %>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
